{
	"name": "client",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "pnpm run generate-sprites && vite dev",
		"build": "pnpm run generate-sprites && vite build",
		"generate-sprites": "pnpm exec tsx scripts/generate-sprites",
		"db:migrate": "pnpm exec tsx scripts/migrate",
		"openapi-gen": "pnpm exec openapi-ts",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run && pnpm run test:e2e",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.9",
		"@eslint/js": "^9.26.0",
		"@hey-api/openapi-ts": "^0.67.4",
		"@playwright/test": "^1.52.0",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@sveltejs/kit": "^2.21.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.7",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.7",
		"@types/bcrypt": "^5.0.2",
		"@types/bun": "^1.2.13",
		"@types/glob": "^8.1.0",
		"@types/node": "^22.15.19",
		"@types/node-forge": "^1.3.11",
		"@types/svg-sprite": "^0.0.39",
		"bun-types": "^1.2.13",
		"eslint": "^9.26.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.6.0",
		"fake-indexeddb": "^6.0.1",
		"glob": "^11.0.2",
		"globals": "^16.1.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.30.1",
		"svelte-check": "^4.2.1",
		"svg-sprite": "^2.0.4",
		"tailwindcss": "^4.1.7",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.1",
		"vite": "^6.3.5",
		"vitest": "^3.1.4"
	},
	"dependencies": {
		"@hey-api/client-fetch": "^0.10.1",
		"@tanstack/svelte-query": "^5.76.0",
		"@types/better-sqlite3": "^7.6.13",
		"bcrypt": "^6.0.0",
		"better-sqlite3": "^11.10.0",
		"dexie": "^4.0.11",
		"kysely": "^0.28.2",
		"kysely-bun-sqlite": "^0.4.0",
		"nanostores": "^1.0.1",
		"node-forge": "^1.3.1",
		"zod": "^3.25.7"
	}
}
